<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <title>Geiser Games</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="/favicon.png">
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Abel|Sacramento">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/principal.css">
</head>
<body>
  <div class="container-fluid" id="site">
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <h1 class="page-brand"><a href="/">Geiser</a> <small> - seu computador a todo vapor</small></h1>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/">Inicial <span class="sr-only">(current)</span></a></li>
        </ul>
      </div>
    </nav>


    <div class="row" id="conteudo">
      <!-- Card de detalhes do jogador (esquerda) -->
      <div class="col-md-3">
        <div class="media-list">
          <div class="media player-card-stacked">
            <div class="media-middle" href="#">
              <img src="{{jogador.avatarmedium}}" class="avatar">
            </div>
            <div class="media-body">
              <h3 class="media-heading"><a href="/jogador/{{jogador.steamid}}/">{{jogador.personaname}}</a></h3>
              <dl class="dl-horizontal">
                <dt>Nome real:</dt><dd>{{jogador.realname}}</dd>
                <dt>País:</dt><dd>{{jogador.loccountrycode}}</dd>
                <dt>Perfil no steam:</dt><dd><a href="{{jogador.profileurl}}">@{{jogador.personaname}}</a></dd>
                <dt>Quantidade jogos:</dt><dd>{{campos_calculados.quantidade_jogos}}</dd>
                <dt>Não jogados:</dt><dd>{{campos_calculados.nao_jogados}}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Card de detalhes do jogo mais jogado (direita) -->
      <div class="col-md-9">
        <div class="row-fluid">
          <h2>O jogo favorito</h2>
        </div>
        <div class="row-fluid">
          <div class="game-detailed-card media">
            <div class="media-left">
              <img src="http://media.steampowered.com/steamcommunity/public/images/apps/{{campos_calculados.top1.appid}}/{{campos_calculados.top1.img_logo_url}}.jpg" class="game-logo">
            </div>
            <div class="media-body">
              <h4 class="media-heading">{{campos_calculados.top1.name}}</h4>
              <dl class="dl-horizontal">
                <dt>Tempo de jogo:</dt><dd>{{campos_calculados.top1.playtime_forever}}h</dd>
                <dt>Estatísticas completas:</dt><dd>http://steamcommunity.com/profiles/{{jogador.steamid}}/stats/{{campos_calculados.top1.appid}}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Lista dos top 5 jogos mais jogados -->
    <div class="row-fluid">
      <div class="col-md-11 col-md-offset-1">
        <div class="row-fluid">
          <h2 class="most-5played-title">Top 5 jogos mais jogados</h2>
        </div>
        <div class="row-fluid">
          <ul class="col-md-12 games-card-list media-list">
            {{#each campos_calculados.top5}}
            <!-- Primeiro card de jogo -->
            <li class="media game-card">
              <div class="media-left media-middle">
                <img src="http://media.steampowered.com/steamcommunity/public/images/apps/{{appid}}/{{img_logo_url}}.jpg">
              </div>
              <div class="media-body media-middle">
                <h4>{{name}}</h4>
              </div>
              <div class="media-right media-middle">
                <span class="badge">{{playtime_forever}}h</span>
              </div>
            </li>
            <!-- Próximo jogo aqui -->
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
